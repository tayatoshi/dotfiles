# vimでneovimを起動
alias vim 'nvim'

# viでneovimを起動
alias vi 'nvim'

# treeコマンドで日本語表示&不可視ファイル可視化
alias tree 'tree -LNaC 2'

# rmする際に確認する
alias rm 'rm -i'

# mvする際にすでに対象が存在すれば確認する
alias mv 'mv -i'

# cpする際にすでに対象が存在すれば確認する
alias cp 'cp -i'

# 画面を常につけておく
alias caf 'caffeinate -d'

# catでbatを実行
alias cat 'bat'

# topでhtopを実行
alias top 'htop'
