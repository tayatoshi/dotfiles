FROM ubuntu:16.04

MAINTAINER taya

RUN echo 'now building...'

CMD echo 'now running...'

# for Ubuntu
RUN apt-get update
RUN apt-get install  gcc g++ make git openssl libssl-dev libbz2-dev libreadline-dev libsqlite3-dev curl libopenblas-dev vim wget software-properties-common htop zsh tree -y

# make user
RUN useradd -m taya
WORKDIR /home/taya
ENV HOME /home/taya
ENV LANG C.UTF-8

# for neovim
RUN add-apt-repository ppa:neovim-ppa/stable
RUN apt-get update && apt-get install -y neovim
RUN /bin/bash -c "mkdir /home/taya/.config"
RUN /bin/bash -c "mkdir /home/taya/.config/nvim"
COPY init.vim /home/taya/.config/nvim/
COPY dein.toml /hoem/taya/.config/nvim/
COPY dein_lazy.toml /hoem/taya/.config/nvim/
RUN echo "alias vim = 'nvim'" >> /home/taya/.bashrc

USER taya
